<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:visibility="visible">

    <ImageView
        android:layout_width="223dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/money" />

    <Button
        android:id="@+id/paymentaccount"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:background="#f4acba"
        android:text="PAYMENT ACCOUNT"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rbutton"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#00FF00"
        android:text="Calculate Cost" />
    <EditText
        android:id="@+id/cost"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Ksh. 0.00"
        android:inputType="text"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bankaccount"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:background="#6696c1"
            android:text="Bank Account"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Mpesa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="55dp"
            android:background="#00ff00"
            android:text="Mpesa"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/logon"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Do You Want A Receipt"
        android:textAlignment="center"
        android:layout_marginBottom="25dp"
        android:textSize="25dp" />

    <Button
        android:id="@+id/yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fdfe02"
        android:text="YES"
        android:layout_marginBottom="12dp"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/no"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:background="#fe0000"
        android:text="NO"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>